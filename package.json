{
  "name": "file-in-a-nutshell",
  "displayName": "File in a Nutshell",
  "description": "Quickly copy files and their contents with formatted paths.",
  "version": "0.0.1",
  "publisher": "aleolidev",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "./src/resources/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "extension.copyFileContent",
        "title": "Copy File(s) Content with Path"
      },
      {
        "command": "extension.copyFolderContent",
        "title": "Copy Folder Content with Paths"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyFileContent",
          "when": "explorerResourceIsFolder == false",
          "group": "navigation"
        },
        {
          "command": "extension.copyFolderContent",
          "when": "explorerResourceIsFolder == true",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.copyFileContent",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
      },
      {
        "command": "extension.copyFolderContent",
        "key": "ctrl+alt+shift+c",
        "mac": "cmd+alt+shift+c",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "File in a Nutshell Extension Configuration",
      "properties": {
        "fileInANutshell.copyFileShortcut": {
          "type": "string",
          "default": "ctrl+alt+c",
          "description": "Default keyboard shortcut for copying file content with path."
        },
        "fileInANutshell.copyFolderShortcut": {
          "type": "string",
          "default": "ctrl+alt+shift+c",
          "description": "Default keyboard shortcut for copying folder content with paths."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "esbuild": "^0.23.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
